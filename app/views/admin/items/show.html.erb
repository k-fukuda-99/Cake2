<!-- 商品詳細ページ WF4ページ目 -->

<div class="container">
  <div class="row">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h4>商品詳細</h4>
    </div>
  </div>
  <div class="row">
   <div class="col-sm-10 px-sm-0 mx-auto mb-5">
     <%= image_tag @item.get_image, size:"200x200"%>
     <table class="table table-borderless">
       <tr>
         <th>商品名</th>
         <td><%= @item.name %></td>
       </tr>
       <tr>
         <th>商品説明</th>
         <td><%= @item.introduction %></td>
       </tr>
       <tr>
         <th>ジャンル</th>
         <td><%= @item.genre.name %></td>
       </tr>
       <tr>
         <th>税込価格<br>(税抜価格)</th>
         <td><%= (@item.price*1.1).floor.to_s(:delimited) %>(<%= (@item.price).floor.to_s(:delimited) %>)円</td>
       </tr>
       <tr>
         <th>販売ステータス</th>
         <td><% if @item.is_active == true %>
            <p class="text-success font-weight-bold">販売中</p>
            <% else %>
            <p class="text-danger font-weight-bold">販売停止中</p>
            <% end %>
         </td>
       </tr>
     </table>
   </div>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="text-center">
      <%= link_to "編集する",edit_admin_item_path(@item), class:"btn btn-success" %>
      </div>
    </div>
  </div>